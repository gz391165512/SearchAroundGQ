<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_title_bar"
            >
        <ImageButton
                android:id="@+id/searchImageButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/back_button_bg"
                android:src="@drawable/abs__ic_search"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                >
        </ImageButton>

        <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1" android:gravity="center">
            <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="西科—搜周边"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    >
            </TextView>
        </LinearLayout>

        <ImageButton
                android:id="@+id/about_button"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/back_button_bg"
                android:src="@drawable/ic_action_setting"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                >
        </ImageButton>

    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1" android:background="#FFFFFF">
        <ListView android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:id="@+id/ListView1" android:divider="#000000" android:dividerHeight="1dp"></ListView>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_title_bar"
            >

        <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:layout_gravity="center_vertical"  android:textSize="16dp" android:textColor="#000000" android:layout_marginLeft="5dp"
                      android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/addressTextView" android:layout_weight="1"></TextView>
            <ImageButton
                    android:id="@+id/locationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_button_bg"
                    android:src="@drawable/ic_localbar_location"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:clickable="true"
                    >
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

